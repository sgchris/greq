{
    "name": "greq/api-service",
    "description": "Greq API Service - Newsletter subscription and management API",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "doctrine/dbal": "^3.7",
        "monolog/monolog": "^3.0",
        "php-di/php-di": "^7.1",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.12",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Greq\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8090 -t public",
        "test": "vendor/bin/phpunit",
        "install-deps": "composer install --no-dev --optimize-autoloader"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
